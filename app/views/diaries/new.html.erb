<div class="container">
<div class="row-cols-auto">
<div class="col">
<body class="bg-light">
  <div class="form-control">

  <%= form_with(model: @diary, local: true) do |form| %>
    <div class="form-group col-md-4">
      <%= form.text_field :title, placeholder: "Title", rows: "10" %>
    </div>
    <div class="form-group col-dm-4">
      <%= form.collection_select(:country_id, Country.all, :id, :name, {}, {class:"select"}) %>
    </div>
    <div class="form-group col-md-4">
      <%= form.text_field :city, placeholder: "City/Place" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.file_field :image, placeholder: "image", class: "img-fluid img-thumbnail" %>
      <p>
          クリックしてファイルをアップロード
      </p>
    </div>
    <div class="form-group col-md-4">
      <%= form.text_area :content, placeholder: "text", rows: "50"%>
    </div>
    <div class="form-group col-md-4">
      <%= form.submit "SEND" %> 
    </div>
  <% end %>

</div>
</div>
</body>
</div>
</div>