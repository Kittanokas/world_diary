<div class="container">
<div class="mb-3 row">
<body class="bg-light">
  <div class="form-control">
  <%= form_with(model: @diary, local: true) do |form| %>
    <%= form.text_field :title, placeholder: "Title", rows: "10" %>
    <%= form.collection_select(:country_id, Country.all, :id, :name, {}, {class:"form-select"}) %>
    <%= form.text_field :city, placeholder: "City/Place" %>
    <%= form.text_field :image, placeholder: "image", class: "img-fluid img-thumbnail" if @diary.image.attached? %>
    <%= form.text_area :content, placeholder: "text", rows: "100" %>
    <%= form.submit "SEND" %>
  <% end %>
</div>
</body>
</div>
</div>