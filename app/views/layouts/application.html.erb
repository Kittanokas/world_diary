<!doctype html>
<html lang="ja">
  <head>
   <title>WorldDiary</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </head>

    <header>
      <div class="container-sm">
      <div class="row">
      <div class="navbar bg-white shadow-sm">
        <%= link_to image_tag("wd.png", class: :logo), root_path %>
        <br>
        <h1><strong>〜世界旅日記〜</strong></h1>
      </a>

       <nav class="navbar navbar-expand-lg navbar-light">

          <% if user_signed_in? %>
           <ul class="nav nav-tabs">
            <p class="fs-2 fw-bold">
            <a href="users/<%= current_user.id %>" class="text-decoration-none text-secondary">
            <%= current_user.nickname %><span> さんのページ</span></a></p>
            </span>
            <li class="nav-item">
             <a class="nav-link" aria-current="page" href="/users/<%= current_user.id %>">
             <%= button_to "My page", user_path(current_user.id), {method: :get, class: "btn btn-outline-secondary navbar-btn"} %>
             </a>
            <li class="nav-item">
             <a class="nav-link" aria-current="page" href="/diaries/new">
             <%= button_to "New post", new_diary_path, {method: :get, class: "btn btn-outline-secondary navbar-btn"}%>
             </a>
            </li>
            <li class="nav-item">
             <a class="nav-link" aria-current="page" href="/users/sign_out">
             <%= button_to "Log out", destroy_user_session_path, {method: :delete, class: "btn btn-outline-secondary navbar-btn"}%>
             </a>
            </li>
           </ul>
          <% else %>
          <ul class="nav nav-tabs">
          <li class="nav-item">
           <a class="nav-link" href="/users/sign_up">
           <p class="text-secondary">Sign Up</p></a>
          </li>
          <li class="nav-item">
           <a class="nav-link" href="/users/sign_in">
           <p class="text-secondary">Sign In</p></a>
          </li>
          </ul>
          <% end %>
          </ul>
        </nav>
    </div>
  </div>

      </header>

      <%= yield %>
      <footer class="footer">
      <p></p>
    </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
