<!doctype html>
<html lang="ja">
  <head>
   <title>WorldDiary</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <body class="bg-light">
      <div class="container">
       <div class= "bg-info d-flex align-items-center justify-content-center" style="height:200px;">
       <div class="row">
        <%= link_to image_tag("wd.png", class: :logo), root_path %>
        <nav class="navbar navbar-expand-lg navbar-light">
        <ul class="nav nav-tabs">
          <% if user_signed_in? %>
            <span class="container">
            <p class="fs-2 fw-bold">
            <a href="users/<%= current_user.id %>" class="text-decoration-none text-secondary">
            <%= current_user.nickname %><span> さんのページ</span></a></p>
            </span>
           <li class="nav-item">
           <a class="nav-link" aria-current="page" href="/users/<%= current_user.id %>">
           <p class="text-secondary">My Page</p></a>
          </li>
          <li class="nav-item">
           <a class="nav-link" href="/users/sign_out" data-method="delete" >
           <p class="text-secondary">Sign Out</p></a>
          </li>
          <% else %>
          <li class="nav-item">
           <a class="nav-link" href="/users/sign_up">
           <p class="text-secondary">Sign Up</p></a>
          </li>
          <li class="nav-item">
           <a class="nav-link" href="/users/sign_in">
           <p class="text-secondary">Sign In</p></a>
          </li>
          <% end %>
        </ul>
        </nav>
       </div>
       </div>
      </div>
      
      <%= yield %>
      <footer class="footer">
      <p></p>
    </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
